{
  "name": "@titanium-sdk/appcelerator.encrypteddatabase",
  "version": "3.0.3",
  "description": "Provides transparent, secure 256-bit AES encryption of SQLite database files.",
  "private": true,
  "scripts": {
    "commit": "git-cz",
    "test": "karma start test/unit/karma.unit.config.js",
    "test:android": "npm test -- --browsers android",
    "test:ios": "npm test -- --browsers ios"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/appcelerator-modules/appcelerator.encrypteddatabase.git"
  },
  "bugs": {
    "url": "https://github.com/appcelerator-modules/appcelerator.encrypteddatabase/issues"
  },
  "homepage": "https://github.com/appcelerator-modules/appcelerator.encrypteddatabase#readme",
  "devDependencies": {
    "@commitlint/cli": "^8.2.0",
    "@commitlint/config-conventional": "^8.2.0",
    "@seadub/clang-format-lint": "0.0.2",
    "@seadub/danger-plugin-dependencies": "^0.1.0",
    "@seadub/danger-plugin-junit": "^0.1.0",
    "clang-format": "^1.2.3",
    "commitizen": "^4.0.3",
    "danger": "^7.1.0",
    "eslint": "^5.10.0",
    "eslint-config-axway": "^4.1.1",
    "eslint-plugin-jasmine": "^2.10.1",
    "husky": "^3.0.9",
    "jasmine-core": "^3.3.0",
    "karma": "^4.0.0",
    "karma-jasmine": "^2.0.1",
    "karma-junit-reporter": "^1.2.0",
    "karma-mocha-reporter": "^2.2.5",
    "karma-titanium-launcher": "^0.7.5",
    "lint-staged": "^9.4.2",
    "socket.io": "^2.2.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "lint-staged": {
    "ios/**/*.{m,h}": [
      "npx clang-format -style=file -i",
      "git add"
    ],
    "*.java": [
      "npx clang-format -style=file -i",
      "git add"
    ],
    "*.js": "eslint"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
